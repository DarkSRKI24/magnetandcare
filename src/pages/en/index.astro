---
import MainLayout from '../../layouts/mainLayout.astro';
import { getLangFromUrl, useTranslatedPath } from '../../i18n/utils.ts';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<MainLayout lang="en" title="Magnet And Care">
	<section class="relative flex justify-center py-8 sm:py-24 lg:bg-[url('/hand-hero.jpg')] bg-cover bg-fixed bg-no-repeat bg-secondary/30">
		<div class="relative z-10 mx-4 sm:mx-20 2xl:mx-0 2xl:w-4/5 flex flex-col lg:flex-row justify-between items-center gap-5 lg:gap-16 xl:gap-5 2xl:gap-0">
			<div class="lg:w-2/3 2xl:w-1/2 flex flex-col gap-4 order-1 lg:order-none">
				<div class="mb-2 md:mb-0 2xl:mb-2 font-bold text-xl sm:text-3xl xl:text-4xl sm:text-nowrap text-center lg:text-start">Welcome to <h1 class="gradient-text inline-block">Magnet And Care</h1> DOO</div>
				<p class="text-lg md:text-2xl text-center sm:text-justify lg:text-start">
					Our mission is to provide top-quality services across various sectors, including elder and disability care, hospitality and hotel industry services, as well as maintaining workplace cleanliness in public utility companies. Based in Apatin, Serbia, our expert team is dedicated to continuously improving the quality of life and work for all our clients. With care and professionalism, we support everyone in need of our services.
				</p>
				<div class="w-max flex flex-col sm:flex-row self-center lg:self-start items-center gap-5 sm:gap-10 lg:gap-5 text-center lg:text-start">
					<a href={translatePath('/about/')} class="inline-block max-w-max px-4 py-2 rounded-lg text-center bg-accent font-bold text-lg">Learn more about us</a>
					<a href={translatePath('/contact/')} class="inline-block max-w-max px-4 py-2 rounded-lg text-center bg-primary md:hover:bg-accent duration-300 font-bold text-lg text-background md:hover:text-text">Contact us</a>
				</div>
			</div>
			<div class="flex justify-center grow order-0 lg:order-none">
				<img src="/mc-logo.svg" alt="Logo" class="w-24 sm:w-48 xl:w-72">
			</div>
		</div>
		<div class="absolute z-0 top-0 left0 w-full h-full lg:bg-white/80"></div>
	</section>
	<section class="flex justify-center">
		<div class="sm:w-4/5 mt-24 flex flex-wrap justify-center gap-16 text-lg">
			<div class="relative w-320 h-360 p-8 flex flex-col flex-nowrap justify-center border-4 border-accent rounded-lg">
				<h2 class="absolute -top-6 -left-1 py-1 pr-2 bg-background font-bold text-2xl">Working Hours</h2>
				<ul class="flex flex-col gap-3.5">
					<li class="flex justify-between">
						<span>Monday</span>
						<span>08:30 - 16:30</span>
					</li>
					<li class="flex justify-between">
						<span>Tuesday</span>
						<span>08:30 - 16:30</span>
					</li>
					<li class="flex justify-between">
						<span>Wednesday</span>
						<span>08:30 - 16:30</span>
					</li>
					<li class="flex justify-between">
						<span>Thursday</span>
						<span>08:30 - 16:30</span>
					</li>
					<li class="flex justify-between">
						<span>Friday</span>
						<span>08:30 - 16:30</span>
					</li>
					<li class="flex justify-between">
						<span>Saturday</span>
						<span class="text-red-600">CLOSED</span>
					</li>
					<li class="flex justify-between">
						<span>Sunday</span>
						<span class="text-red-600">CLOSED</span>
					</li>
				</ul>
			</div>
			<div class="relative w-320 h-360 p-8 flex flex-col flex-nowrap justify-center border-4 border-accent rounded-lg">
				<h2 class="absolute -top-6 -left-1 py-1 pr-2 bg-background font-bold text-2xl">Emergency Contact</h2>
				<div class="h-full flex flex-col justify-around">
					<a href="tel:+381641188942" class="min-w-max p-4 flex justify-around gap-2 flex-nowrap bg-accent md:hover:bg-primary md:hover:text-background duration-300 rounded-full text-center">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 fill-text"><title>phone-alert</title><path d="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 20,15.5A1,1 0 0,1 21,16.5V20A1,1 0 0,1 20,21A17,17 0 0,1 3,4C3,3.44 3.45,3 4,3H7.5A1,1 0 0,1 8.5,4C8.5,5.24 8.7,6.45 9.07,7.57C9.18,7.92 9.1,8.31 8.82,8.58L6.62,10.79M17,12V10H19V12H17M17,8V2H19V8H17Z" /></svg>
						<div class="font-semibold text-xl">+381-64-1188942</div>
					</a>
					<p>
						For emergency contact, call us, and a member of our team will respond as soon as possible during working hours. <span class="font-semibold">Your concern is our priority.</span>
					</p>
				</div>
			</div>
			<div class="relative w-320 h-360 p-8 flex flex-col flex-nowrap justify-center border-4 border-accent rounded-lg">
				<h2 class="absolute -top-6 -left-1 py-1 pr-2 bg-background font-bold text-2xl">We offer you</h2>
				<div class="h-full flex flex-col gap-5">
					<ul class="h-full flex flex-col flex-nowrap justify-between">
						<ul>
							<h3 class="text-xl mb-1 font-semibold">Our services</h3>
							<p>
								Support at every moment, whenever you need it.
							</p>
							<a href={translatePath('/service/')} class="inline-block max-w-max mt-0.5 px-4 py-2 rounded-lg text-center font-bold text-lg bg-accent md:hover:bg-primary md:hover:text-background duration-300">Learn more</a>
						</ul>
						<ul>
							<h3 class="text-xl mb-1 font-semibold">Your job</h3>
							<p>
								Opportunities that change lives for the better.
							</p>
							<a href={translatePath('/career/')} class="inline-block max-w-max mt-0.5 px-4 py-2 rounded-lg text-center font-bold text-lg bg-accent md:hover:bg-primary md:hover:text-background duration-300">Learn more</a>
						</ul>
					</ul>
				</div>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	
.gradient-text {
	background: linear-gradient(90deg, rgb(13, 124, 131), rgb(95, 221, 230));
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
	text-fill-color: transparent;
}

</style>