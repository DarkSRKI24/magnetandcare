---
import "../styles/global.css"
const date = new Date().getFullYear();
const { title } = Astro.props;
---

<html lang="rs">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/MC-logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-text bg-background font-montserrat">
		<header class="flex justify-center">
			<div class="w-4/5"><a href="/" class="text-4xl font-bold flex items-center gap-x-2"><img src="/MC-logo.svg" alt="Logo" class="size-16"> Magnet And Care</a></div>
			<div>
				<ul>
					<li></li>
				</ul>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<div>Copyright &copy {date}</div>
		</footer>
	</body>
</html>

